html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="description", content="A portfolio site showcasing software projects by Loc Dao, focused on clean, efficient, and thoughtful development.")
    title #{title}
    link(rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png")
    link(rel="manifest" href="/site.webmanifest")
  body
    button#contrast.cont-inv Add more contrast
    button#invmode.cont-inv Light mode

    .header-container
      h1#home Welcome!!
      nav
        a(href="#home") Home
        a(href="#about") About me
        a(href="#projects") Projects

    p.st I'm Loc Dao (LD), a software engineer. This is my corner of the internet.

    p(style="text-align: center")
      | [ 
      each key, i in Object.keys(social)
        - const label = key.charAt(0).toUpperCase() + key.slice(1)
        - const href = key === 'email' ? `mailto:${social[key]}` : social[key]
        a(href=href target="_blank" aria-label=label)= label
        if i !== Object.keys(social).length - 1
          |  |  
      | ]

    blockquote
      span #{quotes.text}
      author
        a(href=quotes.src aria-label="Read more about it")= quotes.author

    h2#about About me
    p= about

    section#projects
      h2 Projects
      each project in projects
        .project
          h3= project.name
          p= project.description
          ul.tech
            each tag in project.tags.slice(0, 5)
              li= tag
          div.button-group(style="display: flex; gap: 10px;")
            if project.live_link
              a.btn-live(href=project.live_link target="_blank" aria-label="View live project")
                i.icon-live
            if project.source_link
              a.btn-github(href=project.source_link target="_blank" aria-label="View source on GitHub")
                i.icon-github

    button#goTop.btn-top ↥ Top
    footer.site-footer
      p © Copyright by LD #{new Date().getFullYear()}
